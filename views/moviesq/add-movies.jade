extends ../layout/base
block content
    section.content-header

    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | TR Motor
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus

            .box-body
                form(role='form',method='post' action='/bengkel/add')
                    .row
                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Nama
                                    input(type='text',value='#{nama}',name='nama',placeholder='Nama', autofocus).form-control
                                .form-group
                                    label
                                        | No Telepon
                                    input(type='text',value='#{no_telp}',name='no_telp',placeholder='Nomor Telepon').form-control
                                .form-group
                                    label
                                        | Jenis Mobil
                                    input(type='text',value='#{jenis_mobil}',name='jenis_mobil',placeholder='Jenis Mobil').form-control
                                .form-group
                                    label
                                        | Nomor Polisi
                                    input(type='text',value='#{nopol}',name='nopol',placeholder='Nomor Polisi').form-control
                                .form-group
                                    label
                                        | Tanggal Masuk
                                    input(type='text',value='#{tanggal_masuk}',name='tanggal_masuk',placeholder='Tanggal Masuk').form-control
                                .form-group
                                    label
                                        | Tanggal Keluar
                                    input(type='text',value='#{tanggal_keluar}',name='tanggal_keluar',placeholder='Tanggal Keluar').form-control
                                .form-group
                                    label
                                        | Rincian
                                    input(type='text',value='#{rincian}',name='rincian',placeholder='Rincian').form-control
                                .form-group
                                    label
                                        | Biaya Sparepart
                                    input(type='text',value='#{biaya_sparepart}',name='biaya_sparepart',placeholder='Biaya Sparepart').form-control
                                .form-group
                                    label
                                        | Biaya Jasa
                                    input(type='text',value='#{biaya_jasa}',name='biaya_jasa',placeholder='Biaya Jasa').form-control
                                .form-group
                                    label
                                        | Total
                                    input(type='text',value='#{total}',name='total',placeholder='Total').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary
                                    | Submit

                                a(href='/bengkel').btn.btn-primary.pull-right
                                    | Back